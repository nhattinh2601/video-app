

<%- include ("includes/header") %>

      <div class="container-fluid pb-0" >
         <form action="/registermA" method="POST">
            <div class="row">
               <div class="form-group col-md-6">
                  <label>First Name</label>
                  <input type="text" class="form-control" name="first_name" id="first_name" >
               </div>

               <div class="form-group col-md-6">
                  <label>Last Name</label>
                  <input type="text" class="form-control" name="last_name" id="last_name" >
               </div>
            </div>

            <div class="form-group">
               <label>Email</label>
               <input type="email" class="form-control" name="email" id="email" >
            </div>
            <div class="form-group">
               <label>Role</label>
               <input type="number" class="form-control" name="role" id="role" max="1" min="0" >
            </div>
            <div class="form-group">
               <label>Password</label>
               <input type="password" class="form-control" name="password" id="password">
            </div>
            
            <div class="mt-4">
               <p class="text-danger" id="error"></p>
               <p class="text-success" id="success"></p>

               <button type="submit" class="btn btn-outline-primary btn-block btn-lg">Register</button>
            </div>
         </form>
       
      </div>

      <div class="container" style="border: 1px solid black; border-radius: 10px;height: 300px; width: 1000px; margin-top: 10px;margin-right: 100px; overflow-y:auto;" >
         <table class="table">
            <thead>
              <tr>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <tr>
               <% users.forEach(function (user) { %>
                <th scope="row"><%= user.first_name %></th>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td><a href="/delete-user?v=<%= user._id %>" class="btn btn-danger border-none" >Delete</a></td>
              </tr>
               <% }) %>
        
            </tbody>
          </table>
      </div>
      <!-- /.container-fluid -->

<%- include ("includes/footer") %>
